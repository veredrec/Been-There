<% include ../partials/header %>

<div class="container">
  <div class="row">
    <h1 style="text-align: center;">Add New Comment to <%= place.name %></h1>
    <div style="width: 30%; margin: 30px auto;">
      <form action="/places/<%= place._id %>/comments" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="comment[text]" placeholder="Comment">
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">SUBMIT</button>
        </div>
      </form>
      <a href="/places">Back</a>
    </div>
  </div>
</div>

<% include ../partials/footer %>
