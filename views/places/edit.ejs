<% include ../partials/header %>

<div class="container">
  <div class="row">
    <h1 style="text-align: center;">Edit <%= place.name %></h1>
    <div style="width: 30%; margin: 30px auto;">
      <form action="/places/<%= place._id %>/?_method=PUT" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="place[name]" value="<%= place.name %>">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="place[img]" value="<%= place.img %>">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="place[desc]" value="<%= place.desc %>">
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Update</button>
        </div>
      </form>
      <a href="/places">Back</a>
    </div>
  </div>
</div>

<% include ../partials/footer %>
