<% include ../partials/header %>

<div class="container">
  <div class="row">
    <h1 style="text-align: center;">Add Your Favorite Place</h1>
    <div style="width: 30%; margin: 30px auto;">
      <form action="/places" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="name" placeholder="Place Name">
        </div>
        <div class="form-group">
          <input class="form-control" type="number" name="price" placeholder="Entrance price" min="0.00" step="0.01">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="image" placeholder="Image url">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="description" placeholder="Description">
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">SUBMIT</button>
        </div>
      </form>
      <a href="/places">Back</a>
    </div>
  </div>
</div>

<% include ../partials/footer %>
